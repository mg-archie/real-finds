<div class="flex justify-center mt-8">
    <div class="container w-3/4">
        <!-- Search bar at the top -->
        <div class="bg-gray-200 p-4 rounded-t-lg">
            <label for="address">Address:</label>
            <input type="text" id="address" name="address" placeholder="Enter address"
                class="border rounded px-2 py-1" />

            <button type="submit" class="ml-2 px-4 py-2 bg-blue-500 text-white rounded">
                Search
            </button>
        </div>

        <!-- Dropdowns row -->
        <div class="bg-gray-100 p-4 rounded-b-lg flex items-center">
            <label for="city" class="mr-2">City:</label>
            <select id="city" name="city" placeholder="Select a city" class="border rounded px-2 py-1 mr-4">
                <!-- Options here -->
                <option value="city1">Toronto</option>
                <option value="city2">Missisauga</option>
                <option value="city3">Hamilton</option>
                <option value="city1">Burlington</option>
                <option value="city2">Vaughn</option>
                <option value="city3">Richmond Hill</option>
                <option value="city1">Markham</option>
                <option value="city2">Brampton</option>
            </select>

            <label for="baths" class="mr-2">Number of Baths:</label>
            <select id="baths" name="baths" class="border rounded px-2 py-1 mr-4">
                <!-- Options here -->
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="3">4</option>
                <option value="3">5</option>
                <option value="3">6</option>
                <option value="3">7</option>
            </select>

            <label for="rooms" class="mr-2">Number of Rooms:</label>
            <select id="rooms" name="rooms" class="border rounded px-2 py-1 mr-4">
                <!-- Options here -->
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="3">4</option>
                <option value="3">5</option>
                <option value="3">6</option>
                <option value="3">7</option>
            </select>
        </div>
    </div>
