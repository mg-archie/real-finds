
<div class="container mx-auto p-10">
    <form action="/search" method="get" class="bg-gray-900 text-white rounded-lg p-6 shadow-lg">
        <div class="flex flex-col md:flex-row md:items-center gap-4">
            {{!-- inline Search Bar --}}
            <div class="flex-grow">
                <label for="search-query" class="sr-only">Search</label>
                <div class="relative">
                    <span class="absolute inset-y-0 left-0 flex items-center pl-3">
                        <svg class="w-5 h-5 text-gray-500" xmlns="http://www.w3.org/2000/svg" fill="none"
                            viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M11 21h2M12 2a7 7 0 00-7 7v3a7 7 0 004.9 6.7M12 2a7 7 0 017 7v3a7 7 0 01-4.9 6.7M12 2v7" />
                        </svg>
                    </span>
                    <input type="search" id="search-query" name="query" placeholder="Enter a city or address..."
                        required
                        class="block w-full pl-10 pr-4 py-3 rounded-lg bg-gray-800 border-transparent focus:border-blue-500 focus:ring-blue-500 text-white placeholder-gray-400">
                </div>
            </div>

            {{!-- Filters --}}
            <select id="number-of-baths" name="baths"
                class="p-3 rounded-lg bg-gray-800 text-white border-transparent focus:border-blue-500 focus:ring-blue-500">
                <option value="">Baths</option>
                <option value="1">1 Bath</option>
                <option value="2">2 Baths</option>
                <option value="3">3 Baths</option>
                <option value="3">3 Baths</option>
                <option value="3">3 Baths</option>
                <option value="3">3 Baths</option>
                <option value="3">3 Baths</option>
                <option value="3">3 Baths</option>
            
            </select>

            <select id="number-of-rooms" name="rooms"
                class="p-3 rounded-lg bg-gray-800 text-white border-transparent focus:border-blue-500 focus:ring-blue-500">
                <option value="">Rooms</option>
                <option value="1">1 Room</option>
                <option value="2">2 Rooms</option>
                <option value="3">3 Rooms</option>
                <option value="3">3 Rooms</option>
                <option value="3">3 Rooms</option>
                <option value="3">3 Rooms</option>
                <option value="3">3 Rooms</option>
                <option value="3">3 Rooms</option>

            </select>

            <select id="city" name="city"
                class="p-3 rounded-lg bg-gray-800 text-white border-transparent focus:border-blue-500 focus:ring-blue-500">
                <option value="">City</option>
                <option value="New York">New York</option>
                <option value="Los Angeles">Los Angeles</option>
                <option value="Chicago">Chicago</option>

            </select>

            {{!-- Search Button --}}
            <button type="submit"
                class="px-6 py-3 bg-blue-700 hover:bg-blue-800 rounded-lg text-white font-medium focus:ring-4 focus:outline-none focus:ring-blue-300">
                Search
            </button>
        </div>
    </form>

</div>