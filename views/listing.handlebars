<div class ="flex justify-center listings">
     <a href="/listing/{{this.id}}">
  <div class="flex justify-center bg-white p-4 rounded-lg shadow-md">Image Placeholder</div>
    <h4 class="text-2xl font-bold text-gray-800 dark:text-black mb-2">Listing Price:</h4>
    <p class="text-2xl font-bold text-gray-800 dark:text-darkgray mb-2">${{this.price}} </p>
    <h5 class="text-2xl font-bold text-gray-800 dark:text-black mb-2">Address:</h5>
      <p class="text-2xl font-bold text-gray-800 dark:text-darkgray mb-2">{{this.address}}, {{this.postal_code}}, {{city}}</p>
