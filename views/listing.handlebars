
<div class="flex flex-col md:flex-row md:h-screen w-full listings">
{{!-- img section --}}
  <div class="md:w-1/2 md:h-3/4 bg-cover bg-center" style="background-image: url(/images/{{filename}}); aspect-ratio: 16/9;">
  </div>

 {{!-- text section --}}
  <div class="md:w-1/2 md:h-3/4 p-6 overflow-auto">
    <div class="flex flex-col justify-between h-full space-y-4">
      <div>
        <h4 class="text-3xl font-bold text-gray-800 mb-3">Listing Price: ${{this.price}}</h4>
        <h5 class="text-2xl font-bold text-gray-700 mb-3">Address: {{this.address}}, {{this.postal_code}}, {{city}}</h5>
        <h6 class="text-xl font-bold text-gray-600 mb-3">Property Type: {{this.listing_type}}</h6>
        <p class="text-lg text-gray-600 mb-3">Sqft: {{this.sqft}}</p>
        <p class="text-lg text-gray-600 mb-3"># of Rooms: {{this.rooms}}, # of Baths: {{baths}}</p>
        <h7 class="text-xl font-bold text-gray-600 mb-3">Description:</h7>
        <p class="text-lg text-gray-600">{{this.description}}</p>
      </div>
    </div>
  </div>
</div>
