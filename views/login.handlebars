<section class="bg-gray-200 h-screen flex items-center justify-center">

  <div class="bg-white p-8 rounded shadow-md flex">
    <!-- Login Section -->
    <div class="w-1/2 pr-4">
      <h2 class="text-2xl font-semibold mb-4">Login</h2>
      <form action="/login" method="post">
        <div class="mb-4">
          <label for="loginUsername" class="block text-gray-600">Username/Email:</label>
          <input type="text" id="loginUsername" name="loginUsername" class="border rounded px-3 py-2 w-full">
        </div>
        <div class="mb-4">
          <label for="loginPassword" class="block text-gray-600">Password:</label>
          <input type="password" id="loginPassword" name="loginPassword" class="border rounded px-3 py-2 w-full">
        </div>
        <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded">Login</button>
      </form>
    </div>

    <!-- Create Account Section -->
    <div class="w-1/2 pl-4">
      <h2 class="text-2xl font-semibold mb-4">Create an Account</h2>
      <form action="/create-account" method="post">
        <div class="mb-4">
          <label for="createUsername" class="block text-gray-600">Username:</label>
          <input type="text" id="createUsername" name="createUsername" class="border rounded px-3 py-2 w-full">
        </div>
        <div class="mb-4">
          <label for="createEmail" class="block text-gray-600">Email:</label>
          <input type="email" id="createEmail" name="createEmail" class="border rounded px-3 py-2 w-full">
        </div>
        <div class="mb-4">
          <label for="createPassword" class="block text-gray-600">Password:</label>
          <input type="password" id="createPassword" name="createPassword" class="border rounded px-3 py-2 w-full">
        </div>
        <button type="submit" class="bg-green-500 text-white px-4 py-2 rounded">Create Account</button>
      </form>
    </div>
  </div>

</section>

<script src="../public/js/login.js"></script>